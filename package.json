{
  "name": "cyborg-upload-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "npm --workspace apps/api run start:dev",
    "dev:web": "npm --workspace apps/web run dev",
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:web\"",
    "build": "npm -ws run build",
    "lint": "npm -ws run lint",
    "test": "npm -ws run test",
    "pree2e": "playwright install",
    "e2e": "concurrently -k -s first -n api,web,e2e \"DATABASE_URL=file:./test.db npm --workspace apps/api run prisma:db-push && DATABASE_URL=file:./test.db npm --workspace apps/api run prisma:seed && NODE_ENV=test npm run dev:api\" \"npm run dev:web\" \"wait-on tcp:3001 tcp:5173 && playwright test\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@nestjs/common": "^10.3.10",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.3.10",
    "@nestjs/platform-express": "^10.3.10",
    "@nestjs/swagger": "^7.4.2",
    "@playwright/test": "^1.47.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,css,html}": [
      "prettier --write"
    ]
  },
  "packageManager": "npm@10"
}
